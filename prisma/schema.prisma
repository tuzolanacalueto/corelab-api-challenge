datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  todos    Todo[]
}

model Todo {
  id         Int     @id @default(autoincrement())
  title      String
  isFavorite Boolean @default(false)
  color      String?
  userId     Int
  user       User    @relation(fields: [userId], references: [id])
}
